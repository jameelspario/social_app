<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/live_bottom_layout_height"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/live_bottom_button_layout_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/live_bottom_message_input_hint"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/live_bottom_btn_fun1"
        android:layout_marginEnd="@dimen/live_bottom_btn_margin"
        android:paddingStart="@dimen/live_bottom_edit_padding"
        android:paddingEnd="@dimen/live_bottom_edit_padding"
        android:text="@string/live_bottom_edit_hint"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/default_text_color_light"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        android:lines="1"
        android:scrollHorizontally="true"
        android:background="@drawable/round_scalable_gray_bg"/>


   <!-- <FrameLayout
        android:id="@+id/live_bottom_btn_fun4_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/live_bottom_btn_margin">-->

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/live_bottom_btn_fun4"
            android:layout_width="@dimen/live_bottom_layout_height"
            android:layout_height="@dimen/live_bottom_layout_height"
            android:layout_alignParentEnd="true"
            android:src="@drawable/live_bottom_btn_more"
            android:background="@drawable/round_dark_gray_bg"
            android:layout_marginEnd="@dimen/live_bottom_btn_margin"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/live_bottom_btn_fun4_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart_red_1"
            android:text="0"
            android:textColor="@color/white"
            android:padding="@dimen/_2dp"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/live_bottom_btn_margin"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round_dark_yellow_bg" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/live_bottom_btn_fun3"
        android:layout_width="@dimen/live_bottom_layout_height"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:src="@drawable/ic_heart_red_1"
        android:layout_marginEnd="@dimen/live_bottom_btn_margin"
        android:layout_toStartOf="@id/live_bottom_btn_fun4"
        android:background="@drawable/round_dark_gray_bg"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/live_bottom_btn_fun2"
        android:layout_width="@dimen/live_bottom_layout_height"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:layout_marginEnd="@dimen/live_bottom_btn_margin"
        android:layout_toStartOf="@id/live_bottom_btn_fun3"
        android:background="@drawable/round_dark_gray_bg" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/live_bottom_btn_fun1"
        android:layout_width="@dimen/live_bottom_layout_height"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:layout_toStartOf="@id/live_bottom_btn_fun2"
        android:layout_marginEnd="@dimen/live_bottom_btn_margin"
        android:visibility="visible"
        android:background="@drawable/round_dark_gray_bg"/>
</RelativeLayout>
