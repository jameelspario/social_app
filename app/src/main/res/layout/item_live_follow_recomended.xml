<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal">


   <androidx.cardview.widget.CardView
       android:id="@+id/avtarCard"
       android:layout_width="match_parent"
       app:cardBackgroundColor="@color/black"
       android:layout_height="224dp"
       android:layout_margin="@dimen/_5sdp"
       app:cardCornerRadius="@dimen/_5sdp"
       app:cardMaxElevation="@dimen/_7dp"
       app:cardElevation="@dimen/_5sdp"
       android:layout_centerHorizontal="true">

       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/avtar"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           tools:srcCompat="@drawable/profile_image_6"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:scaleType="fitXY"
           android:layout_margin="@dimen/_5sdp"
           />

   </androidx.cardview.widget.CardView>

 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
     android:layout_below="@id/avtarCard"
        android:padding="@dimen/_6dp"
     android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/follow_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Name"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center_horizontal"
            android:text="Follow"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_12dp"
            android:paddingEnd="@dimen/_12dp"
            android:background="@drawable/cisrcular_button_shape" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/live_type_item2"
        android:orientation="vertical"
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_30dp" />

</RelativeLayout>