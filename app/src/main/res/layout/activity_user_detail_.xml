<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.user_detail_Activity">

    <LinearLayout
        android:id="@+id/mll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-7dp"
        android:background="#00ECECEC"
        android:gravity="top|center_vertical"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mBack"
            android:layout_width="47dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:padding="@dimen/_5sdp"
            app:srcCompat="@drawable/arrow_back"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/mtxt"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center_vertical"
            android:text="profile"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/scrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mll"
        tools:ignore="MissingConstraints,UnknownId">

        <RelativeLayout
            android:id="@+id/sll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/ppp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:text="name1"/>


                <Button
                    android:id="@+id/follow_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="followbtn"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10dp"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ppp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hexa"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_hexagon"
                    android:layout_marginStart="@dimen/_10dp"/>


                <LinearLayout
                    android:id="@+id/draw"
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:background="@drawable/drawable_activity"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/_5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:contentDescription="@null"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_male_gender" />

                        <TextView
                            android:id="@+id/age"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="2dp"
                            android:layout_marginTop="2dp"
                            android:paddingEnd="@dimen/_5dp"
                            android:text="age1" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/draw1"
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5dp"
                    android:background="@drawable/default_dot"
                    android:layout_marginEnd="@dimen/_5dp">


                    <LinearLayout
                        android:id="@+id/bnb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:contentDescription="@null"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:contentDescription="@null"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_arrow_right" />

                        <TextView
                            android:id="@+id/back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="2dp"
                            android:layout_marginTop="@dimen/_2dp"
                            android:paddingEnd="@dimen/_5dp"
                            android:text="num" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/live"
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:background="@drawable/arrow_back"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/_5dp">

                    <LinearLayout
                        android:id="@+id/lnll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:contentDescription="@null"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/star"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:contentDescription="@null"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_crown" />

                        <TextView
                            android:id="@+id/lv.1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="2dp"
                            android:layout_marginTop="@dimen/_2dp"
                            android:paddingEnd="@dimen/_5dp"
                            android:text="lv" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/flt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/_5dp">

                    <ImageView
                        android:id="@+id/flag"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="20dp"
                        android:src="@drawable/flag_india"
                        android:contentDescription="@null" />


                    <LinearLayout
                        android:id="@+id/lnl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:contentDescription="@null"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tdt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="distance"
                            android:layout_marginStart="5dp"/>

                        <TextView
                            android:id="@+id/wdt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="vbar"
                            android:layout_marginStart="5dp"
                            />

                        <TextView
                            android:id="@+id/dt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hour"
                            android:layout_marginStart="5dp"
                            />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/largetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/linear"
                android:text="larger"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                tools:ignore="UnknownId" />


            <!--  <View
                  android:id="@+id/vi"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/largetext"
                  android:layout_marginStart="@dimen/_10dp"
                  android:layout_marginEnd="@dimen/_10dp"
                  style="bold"
                  android:background="@color/gray" />
  -->
            <!--


                            <TextView
                                android:id="@+id/hh"
                                android:layout_below="@id/largetext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/moments"
                                android:textSize="15sp"

                                />
            -->



        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>