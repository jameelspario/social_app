<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/blue_stroke"
    tools:context=".Activities.FamilyDetailsJoin">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250dp"
            android:id="@+id/framebackground"
            android:layout_margin="@dimen/_10sdp">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200dp"
    android:scaleType="fitXY"
    android:id="@+id/framebackground1"
    android:layout_margin="@dimen/_5sdp"
    android:src="@drawable/no_image"/>
            <FrameLayout
                android:id="@+id/frame1_back"
                android:layout_width="@dimen/_130dp"
                android:layout_height="@dimen/_130dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_80dp"
                android:overScrollMode="always">

                <com.deificindia.indifun.ui.CircleImageView
                    android:id="@+id/frame_image"
                    android:layout_width="@dimen/_70dp"
                    android:layout_height="@dimen/_70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/no_image">

                </com.deificindia.indifun.ui.CircleImageView>
            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           android:layout_marginTop="@dimen/_40sdp"
            android:layout_below="@id/framebackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:id="@+id/family_name"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:id="@+id/family_id"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                >

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:id="@+id/family_about"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                >

            </TextView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_25sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points requires :"
                    android:id="@+id/family_points"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points requires :"
                    android:id="@+id/family_point1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_toRightOf="@id/family_points"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    >

                </TextView>
            </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_15sdp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lv."
        android:id="@+id/family_level"
        android:layout_gravity="start"
        android:gravity="center"
        android:layout_alignParentEnd="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/family_levelcount"
        android:layout_gravity="start"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_toRightOf="@id/family_level"
        android:textStyle="bold"
        android:textColor="@color/white"
        >
    </TextView>
    <com.google.android.material.progressindicator.ProgressIndicator
        android:layout_width="@dimen/_220dp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toRightOf="@id/family_levelcount"
        android:foregroundGravity="center"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:progress="@integer/anim_length"
        android:id="@+id/progress">

    </com.google.android.material.progressindicator.ProgressIndicator>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lv."
        android:id="@+id/family_ourlevel"
        android:layout_gravity="center"
        android:gravity="start"

        android:layout_toRightOf="@id/progress"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/family_levelcountour"
        android:layout_gravity="start"
        android:gravity="start"
        android:textSize="18sp"
        android:layout_toRightOf="@id/family_ourlevel"
        android:textStyle="bold"
        android:textColor="@color/white"
        >
    </TextView>
</RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp"
                android:background="@drawable/layout_background"
                android:layout_marginEnd="@dimen/_15sdp"
                android:id="@+id/contribute"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_15sdp">
                <ImageView
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:src="@drawable/award"
                    android:foregroundGravity="center"
                    android:id="@+id/trophy"
                    android:layout_margin="@dimen/_15sdp">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/trophy"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/contri"
                    android:foregroundGravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/family_contribution_rank">

                </TextView>
                <com.deificindia.indifun.ui.CircleImageView
                    android:id="@+id/frame_top1"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toRightOf="@id/contri"
                    android:src="@drawable/no_image">

                </com.deificindia.indifun.ui.CircleImageView>
                <com.deificindia.indifun.ui.CircleImageView
                    android:id="@+id/frame_top2"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="-15dp"
                    android:layout_toRightOf="@id/frame_top1"
                    >

                </com.deificindia.indifun.ui.CircleImageView>
                <com.deificindia.indifun.ui.CircleImageView
                    android:id="@+id/frame_top3"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="-15dp"
                    android:layout_toRightOf="@id/frame_top2"
              >

                </com.deificindia.indifun.ui.CircleImageView>
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:src="@drawable/next"
                    android:layout_toRightOf="@id/frame_top3"
                    android:foregroundGravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:tint="@color/white"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_height="@dimen/_20sdp">

                </ImageView>
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/layout_background"
            android:id="@+id/applyjoin"
            android:textColor="@color/white"/>

    </RelativeLayout>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>