<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/avtarCard"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardMaxElevation="@dimen/_7dp"
        app:cardElevation="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/follow_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@drawable/profile_image_6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/_5sdp" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/follow_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Name"
        android:maxLines="1"
        android:gravity="center"
        android:ellipsize="end"
       android:layout_marginLeft="@dimen/_10dp"
        android:padding="5dp"
        android:layout_below="@id/avtarCard"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/tvwhatsup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_below="@id/follow_name"
        android:layout_gravity="center" />

    <com.deificindia.indifun.ui.TagView
        android:id="@+id/tagviewFollower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/live_type_item3"
        android:orientation="vertical"
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_30dp" />

</RelativeLayout>