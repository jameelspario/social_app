<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splashbg">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AB000000" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_15dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/_100dp"
                android:layout_height="@dimen/_100dp"
                android:layout_marginTop="@dimen/_24dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logootp"/>

            <ImageView
                android:id="@+id/imgClose"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="@dimen/_12dp"
                android:layout_alignParentEnd="true"
                app:tint="@color/white"
                android:src="@drawable/ic_close"/>

            <TextView
                android:id="@+id/txtlive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Livestream, earn tokens"
                android:textSize="21sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_below="@+id/icon"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/tmsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Whatever your talent, show it off to earn rewards, but please avoid:"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_below="@+id/txtlive"
                android:textStyle="bold"
                />
            <View
                android:id="@+id/view1"
                style="@style/divider"
                android:layout_below="@+id/tmsg"
                />
            <LinearLayout
                android:id="@+id/ln"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_close"
                    app:tint="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nudity or pornography"
                    android:textSize="20sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <View
                android:id="@+id/view2"
                style="@style/divider"
                android:layout_below="@+id/ln"
                />
            <LinearLayout
                android:id="@+id/ln1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_close"
                    app:tint="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hate Speech or bullying "
                    android:textSize="20sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <View
                android:id="@+id/view3"
                style="@style/divider"
                android:layout_below="@+id/ln1"
                />
            <LinearLayout
                android:id="@+id/ln2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view3"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_close"
                    app:tint="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guns or violence "
                    android:textSize="20sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <View
                android:id="@+id/view4"
                style="@style/divider"
                android:layout_below="@+id/ln2"
                />
            <LinearLayout
                android:id="@+id/ln3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view4"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_close"
                    app:tint="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Minors "
                    android:textSize="20sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <View
                android:id="@+id/view5"
                style="@style/divider"
                android:layout_below="@+id/ln3"
                />

            <Button
                android:id="@+id/btngotit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Got it"
                android:layout_marginTop="@dimen/_12dp"
                android:textColor="@color/btn_color_on_yellow"
                android:background="@drawable/bg_button_click_yellow"
                android:layout_below="@+id/view5"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginStart="@dimen/_15dp"
                />

<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="By tapping 'Got it' you are agreeing to our Live Terms and Conditions"
    android:textColor="@color/white"
    android:textSize="18sp"
    android:layout_marginStart="@dimen/_15dp"
    android:layout_marginTop="@dimen/_15dp"
    android:gravity="center"
    android:layout_below="@+id/btngotit"/>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>