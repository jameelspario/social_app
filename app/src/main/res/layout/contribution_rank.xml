<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/parent_zoom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_10sdp"
                android:textColor="@color/black"
                android:id="@+id/mcontri_ids"
                android:gravity="center">

            </TextView>


            <com.deificindia.indifun.ui.CircleImageView
                android:layout_width="@dimen/_70dp"
                android:layout_height="@dimen/_70dp"
                android:src="@drawable/no_image"
                android:layout_toRightOf="@id/mcontri_ids"
                android:id="@+id/mcontri_circleimage">

            </com.deificindia.indifun.ui.CircleImageView>

            <TextView
                android:id="@+id/mcontri_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_toEndOf="@id/mcontri_circleimage"
                android:gravity="center_vertical"
                android:text="Sudhir Kumar Singh"
                android:textColor="@color/black"
                android:textStyle="bold">

            </TextView>
            <LinearLayout
                android:id="@+id/chips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:layout_toEndOf="@id/mcontri_username"
                android:transitionName="@string/trans_other_user_deatail_activity_tags" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contribution :"
                android:id="@+id/mcontri_contribution"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/_5sdp"
                android:layout_below="@id/mcontri_username"
                android:layout_toRightOf="@id/mcontri_circleimage">

            </TextView>

            <TextView
                android:id="@+id/mcontri_contributionrank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mcontri_username"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_toRightOf="@id/mcontri_contribution"
                android:gravity="center_vertical"
                android:text="Sudhir Kumar Singh"
                android:textColor="@color/black"
                android:textStyle="bold">

            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2dp"
                android:layout_margin="@dimen/_5dp"
                android:layout_below="@id/mcontri_circleimage"
                android:background="@color/bottom_nav_unselect_color"></View>
        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>