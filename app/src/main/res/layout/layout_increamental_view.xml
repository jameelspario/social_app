<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_radius_border_autoincrement">

    <ImageView
        android:id="@+id/img_minu"
        android:layout_width="@dimen/_32dp"
        android:layout_height="@dimen/_32dp"
        app:srcCompat="@drawable/substract_icon"
        app:tint="@color/white"
        android:padding="10dp"
        android:background="@drawable/bg_left_half_circle_state"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="center"
        android:hint=""
        android:minEms="6"
        android:text="@string/zero"
        android:paddingStart="@dimen/_4dp"
        android:paddingEnd="@dimen/_4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_minu"
        app:layout_constraintEnd_toStartOf="@+id/img_plus"/>

    <ImageView
        android:id="@+id/img_plus"
        android:layout_width="@dimen/_32dp"
        android:layout_height="@dimen/_32dp"
        app:srcCompat="@drawable/plus_icon"
        app:tint="@color/white"
        android:padding="10dp"
        android:background="@drawable/bg_right_half_cirlce_state"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>