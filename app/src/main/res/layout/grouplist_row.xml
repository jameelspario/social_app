<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5dp"
        android:layout_marginTop="@dimen/_2dp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:background="@drawable/ic_bgcoinsgolden"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_bgcoinsgolden"
            android:orientation="vertical">
        <ImageView
            android:visibility="gone"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_gravity="center_horizontal"
            app:tint="@color/golden"
            app:srcCompat="@drawable/stars" />


        <TextView
            android:id="@+id/groupname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INR 80.00"
            android:textColor="@color/black"
            android:textSize="@dimen/_17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/groupdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INR 80.00"
            android:textSize="@dimen/_15sp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/creationdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-10-01"
            android:gravity="right"
            android:textSize="@dimen/_15sp"/>

            <TextView
                android:id="@+id/joingroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join"
                android:foreground="?attr/selectableItemBackground"
                android:padding="@dimen/_5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/login_gradiant_button"
                android:textSize="@dimen/_15sp"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>