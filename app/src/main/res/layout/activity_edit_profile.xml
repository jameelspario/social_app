<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="@string/trans_edit_user_profile"
    android:background="@color/white"
    tools:context=".Activities.EditProfileActivity">

    <include
        android:id="@+id/toolbar1"
        layout="@layout/generaltoolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginRight="@dimen/_20sdp"
                android:orientation="vertical">

               <!-- <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:elevation="@dimen/_2sdp"
                    app:cardCornerRadius="@dimen/_10sdp">-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edt_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@drawable/et_bg"
                            android:hint="Name"
                            android:inputType="text"
                            android:maxLength="50"
                            android:paddingLeft="@dimen/_20sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp" />

                        <View

                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:background="@drawable/et_bg"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="@dimen/_20sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/edt_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:background="@drawable/et_bg"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="Mobile"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="@dimen/_20sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/edt_dob"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:background="@drawable/et_bg"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="Birthdate"
                            android:inputType="text"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingTop="@dimen/_12sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary" />

                        <EditText
                            android:id="@+id/edt_age"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_10dp"
                            android:background="@drawable/et_bg"
                            android:editable="false"
                            android:focusable="false"
                            android:hint="Age"
                            android:inputType="number"
                            android:maxLength="2"
                            android:paddingLeft="@dimen/_20sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10dp"
                            android:background="@drawable/et_bg"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_20sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:text="Gender"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_18sdp" />

                            <RadioGroup
                                android:id="@+id/rb_group"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/male"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Male"
                                    android:textColor="@color/black" />

                                <RadioButton
                                    android:id="@+id/female"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Female" />

                            </RadioGroup>

                            <!--
                                                        <RadioGroup
                                                            android:id="@+id/rb_group"
                                                            android:layout_width="0dp"
                                                            android:layout_height="@dimen/_25sdp"
                                                            android:layout_marginLeft="@dimen/_100sdp"
                                                            android:layout_marginTop="@dimen/_10sdp"
                                                            android:layout_weight="1"
                                                            android:orientation="horizontal">

                                                            <RadioButton
                                                                android:id="@+id/male"
                                                                android:layout_width="@dimen/_25sdp"
                                                                android:layout_height="@dimen/_25sdp"
                                                                android:layout_marginRight="@dimen/_50sdp"
                                                                android:button="@null"
                                                                android:drawableTop="@drawable/rb_sex_male_checked"
                                                                android:drawablePadding="8dp"
                                                                android:gravity="center"
                                                                android:text="male" />

                                                            <RadioButton
                                                                android:id="@+id/female"
                                                                android:layout_width="@dimen/_25sdp"
                                                                android:layout_height="@dimen/_25sdp"
                                                                android:button="@null"
                                                                android:drawableTop="@drawable/rb_sex_female_checked"
                                                                android:drawablePadding="8dp"
                                                                android:gravity="center"
                                                                android:text="female" />

                                                        </RadioGroup>
                            -->

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10dp"
                            android:background="@drawable/et_bg"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_20sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:text="What's Up"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_18sdp" />

                            <EditText
                                android:id="@+id/edt_whatsup"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:background="@drawable/et_bg"
                                android:hint="What's Up"
                                android:singleLine="true"
                                android:inputType="textEmailAddress"
                                android:paddingLeft="@dimen/_20sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_18sdp" />


                        </LinearLayout>

                        <View

                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10dp"
                            android:background="@drawable/et_bg"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_20sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:text="Relationship Status"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_18sdp" />

                            <RadioGroup
                                android:id="@+id/rb_relationshipstatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_20sdp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <RadioButton
                                    android:id="@+id/single"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Single"
                                    android:textColor="@color/black" />

                                <RadioButton
                                    android:id="@+id/inarelationship"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/relation" />

                                <RadioButton
                                    android:id="@+id/mrried"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/status"
                                    android:textColor="@color/black" />

                                <RadioButton
                                    android:id="@+id/privacy"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Privacy" />

                            </RadioGroup>
                            <View

                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorPrimary" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10dp"
                            android:background="@drawable/et_bg"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="@dimen/_20sdp"
                                android:paddingTop="@dimen/_12sdp"
                                android:text="Current Location"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_18sdp" />

                                <TextView
                                    android:id="@+id/getcurentlocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="right|center_vertical"
                                    android:layout_weight="1"
                                    android:textStyle="bold"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:paddingTop="@dimen/_10sdp"
                                    android:text="Click To Get Your Current Location"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12sdp" />


                            </LinearLayout>

                            <EditText
                                android:id="@+id/edt_cureentlocaton"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:background="@drawable/et_bg"
                                android:editable="false"
                                android:focusable="false"
                                android:hint="@string/currentloc"
                                android:inputType="textEmailAddress"
                                android:paddingStart="@dimen/_20sdp"
                                android:paddingEnd="20dp"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>
                        <View

                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorPrimary" />

                        <RelativeLayout
                            android:id="@+id/btn_continue"
                            android:background="@drawable/bg_button_click_yellow_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_20dp"
                            android:layout_margin="@dimen/_24sdp"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/opensans_semibold"
                                android:text="@string/update"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                tools:ignore="RelativeOverlap" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:contentDescription="@null"
                                app:srcCompat="@drawable/ic_arrow_right" />

                        </RelativeLayout>

                    </LinearLayout>

                <!--</androidx.cardview.widget.CardView>-->

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>