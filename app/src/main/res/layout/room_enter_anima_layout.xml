<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_24dp"
    android:id="@+id/parent"
    android:background="@drawable/entry_1_5">

    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/entry_tail_1_5">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/tv_level"
            android:scaleType="fitXY"
            android:src="@drawable/entry_head_1_5"/>

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/_4dp"
            android:paddingEnd="@dimen/_4dp"
            android:text="99 Lvl"
            android:textColor="@color/white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/body_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_1dp"
        android:layout_marginBottom="@dimen/_1dp"
        android:layout_toEndOf="@+id/head_layout"
        android:background="@drawable/entry_body__1_5">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/_8dp"
            android:paddingEnd="@dimen/_15dp"
            android:textColor="@color/white"
            android:maxLines="1"
            android:text="dfgdfg fgdfg gf fghghgf gh "/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tail_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/body_layout">

        <ImageView
            android:id="@+id/img_tail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

    </RelativeLayout>


</RelativeLayout>