<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.deificindia.indifun.ui.CircleImageView
        android:id="@+id/avtar"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/img_user_default"
        app:flow_horizontalStyle="packed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/avtar"
        app:layout_constraintTop_toTopOf="@+id/avtar"
        app:layout_constraintBottom_toBottomOf="@+id/avtar"
        app:layout_constraintEnd_toStartOf="@+id/button"
        android:text=""
        android:maxLines="1"
        android:ellipsize="end"
        android:padding="@dimen/_8dp"/>

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/cisrcular_button_shape"
        android:text="Unblock"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingStart="@dimen/_12dp"
        android:paddingEnd="@dimen/_12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>