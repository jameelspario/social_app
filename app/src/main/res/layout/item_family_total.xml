<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardMaxElevation="@dimen/_10sdp"

            app:cardBackgroundColor="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

<FrameLayout
    android:layout_width="@dimen/_30sdp"
    android:layout_height="@dimen/_30sdp"
    android:background="@drawable/ic_medal"
    android:layout_marginStart="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:id="@+id/findframe">
                <TextView
                    android:id="@+id/findid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/red_2"
                    android:textSize="14sp">

                </TextView>
</FrameLayout>
                <com.deificindia.indifun.ui.CircleImageView
                        android:layout_width="@dimen/_70dp"
                        android:layout_height="@dimen/_70dp"
                        android:src="@drawable/ic_user"
                        android:padding="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:id="@+id/circlefan1"
                        android:layout_toRightOf="@id/findframe"
                        android:layout_marginTop="@dimen/_5sdp"
                        >

                    </com.deificindia.indifun.ui.CircleImageView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/centerpart"
                    android:layout_toRightOf="@id/circlefan1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sudhir Singh"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/username"
                        android:textColor="@color/black"
                        />
                    <LinearLayout
                        android:id="@+id/chips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_toRightOf="@id/username"
                        android:transitionName="@string/trans_other_user_deatail_activity_tags" />

                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/centerpart"
                    android:id="@+id/ffff"
                    android:layout_toRightOf="@id/circlefan1">
                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/account"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        app:tint="@color/gray_alpha"
                        android:foregroundGravity="center"
                        android:id="@+id/image"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="778"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:gravity="center"
                        android:layout_toRightOf="@id/image"
                        android:id="@+id/contribu"/>
                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:foregroundGravity="center"
                        android:layout_toRightOf="@id/contribu"
                        android:id="@+id/view"
                        app:tint="@color/gray_alpha"
                        android:src="@drawable/slash"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="800"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:layout_toRightOf="@id/view"
                        android:id="@+id/contribu1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Points :"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:textColor="@color/red"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@id/contribu1"
                        android:id="@+id/contributed_count"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foregroundGravity="center"
                        android:text="23132131231231231"
                        android:gravity="start"
                        android:id="@+id/totalcount"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_toRightOf="@id/contributed_count"/>

                </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/_2sdp"
    android:layout_below="@id/ffff"
    android:background="@color/gray_alpha"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_toEndOf="@id/circlefan1"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>