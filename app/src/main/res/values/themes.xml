    <style name="TransparentDialog" parent="@style/AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="NameTextView">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="maxLines">1</item>
    </style>
 <!--menu anim-->

    <style name="ViewShade">
        <item name="android:background">@color/material_grey_300</item>
        <item name="android:layout_marginTop">@dimen/_32dp</item>
        <item name="android:layout_marginBottom">@dimen/_32dp</item>
        <item name="android:layout_marginStart">@dimen/_8dp</item>
        <item name="android:layout_marginEnd">@dimen/_8dp</item>

    </style>

    <style name="ImageViewIconSize">
        <item name="android:layout_width">@dimen/_32dp</item>
        <item name="android:layout_height">@dimen/_32dp</item>
