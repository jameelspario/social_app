    <!--BottomSheet-->
    <style name="myFullscreenAlertDialogStyle" parent="Theme.AppCompat.Light.NoActionBar.FullScreen">      //no actionbar, but status bar exists
     <item name="android:layout_width">fill_parent</item>
     <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>        //smooth animation
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>


    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:fontFamily">@font/opensans_regular</item>

    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#50FFFFFF</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">auto</item>
        <item name="tabSelectedTextColor">@color/golden_yellow</item>
        <item name="tabTextAppearance">@color/golden_yellow</item>
        <item name="tabTextColor">#505050</item>
        <item name="android:background">@drawable/redbg</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
       <!-- <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>-->
        <!--<item name="android:windowFullscreen">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <!-- ciscle reaveal theme. -->
    <style name="AppTheme3" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme3.Transparent" parent="AppTheme3">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/window_primary_dark_color</item>
        <item name="colorPrimaryDark">@color/window_primary_dark_color</item>
        <item name="colorAccent">@color/window_primary_dark_color</item>
        <item name="android:windowBackground">@color/black</item>
    </style>


    <style name="tabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/login_gradiant_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonStyle2">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/bg_button_click_yellow_2</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="live_room_dialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/from_bottom</item>
        <item name="android:windowExitAnimation">@anim/to_bottom</item>
    </style>

    <style name="live_room_dialog_center_in_window" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="action_sheet_seek_bar">
        <item name="android:minHeight">@dimen/live_room_action_sheet_seek_bar_height</item>
        <item name="android:maxHeight">@dimen/live_room_action_sheet_seek_bar_height</item>
        <item name="android:progressDrawable">@drawable/setting_progress</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
    </style>

    <style name="action_sheet_beauty_seek_bar" parent="action_sheet_seek_bar">
        <item name="android:max">10</item>
    </style>

    <!--edit @spario-->
    <style name="FullScreenDialog" parent="@style/AppTheme">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#A3A3A3</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="divider2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#A3A3A3</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:layout_marginBottom">17dp</item>
    </style>

